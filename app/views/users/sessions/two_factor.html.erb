<% content_for :title, "Two-Factor Authentication" %>

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
        Two-Factor Authentication
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Enter your 6-digit authentication code or backup code
      </p>
    </div>

    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true, 
                  class: "mt-8 space-y-6") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Hidden fields to maintain session -->
      <%= f.hidden_field :email, value: resource.email %>
      <%= f.hidden_field :password, value: params[:user][:password] %>
      <%= f.hidden_field :remember_me, value: params[:user][:remember_me] %>

      <div class="rounded-md shadow-sm space-y-4">
        <div>
          <%= f.label :otp_attempt, "Authentication Code", 
                      class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :otp_attempt, 
                          placeholder: "6-digit code or backup code",
                          maxlength: 8,
                          class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
                          autocomplete: "off",
                          autofocus: true %>
        </div>
      </div>

      <div>
        <%= f.submit "Verify and Sign In", 
                    class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>

      <div class="text-center space-y-2">
        <p class="text-sm text-gray-600">
          Don't have access to your authenticator app?
        </p>
        <p class="text-xs text-gray-500">
          Use one of your backup codes instead
        </p>
      </div>

      <div class="text-center">
        <%= link_to "Back to Sign In", new_user_session_path, 
                    class: "text-indigo-600 hover:text-indigo-500 text-sm" %>
      </div>
    <% end %>
  </div>
</div>
