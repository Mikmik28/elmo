<!-- Simple navigation bar -->
<div class="bg-white shadow mb-6 -mx-6 px-6 py-3">
  <div class="flex justify-between items-center">
    <div class="flex items-center space-x-4">
      <% if local_assigns[:back_link] %>
        <%= link_to back_link[:text], back_link[:path], class: "text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
        <span class="text-gray-300">|</span>
      <% end %>
      <%= link_to "Dashboard", root_path, class: "text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
      <span class="text-gray-300">|</span>
      <%= link_to "My Loans", loans_path, class: "text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
      <span class="text-gray-300">|</span>
      <span class="text-gray-600 text-sm">Welcome, <%= current_user.full_name || current_user.email %></span>
    </div>
    <div class="flex items-center space-x-3">
      <% if current_user.admin_role? %>
        <%= link_to "Admin", admin_root_path, class: "text-purple-600 hover:text-purple-800 text-sm font-medium" %>
      <% end %>
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, 
          class: "inline-flex items-center px-3 py-1 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
          data: { confirm: "Are you sure you want to sign out?" } %>
    </div>
  </div>
</div>