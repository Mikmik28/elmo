<% content_for :title, "KYC Status" %>

<div class="max-w-2xl mx-auto py-8 px-4">
  <div class="bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">KYC Verification Status</h1>
    
    <% case @kyc_status %>
    <% when "pending" %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4 mb-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">Verification Pending</h3>
            <p class="text-sm text-yellow-700 mt-1">
              Your documents are being reviewed. This typically takes 1-2 business days.
            </p>
          </div>
        </div>
      </div>
    <% when "approved" %>
      <div class="bg-green-50 border border-green-200 rounded-md p-4 mb-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-green-800">Verification Approved</h3>
            <p class="text-sm text-green-700 mt-1">
              Your identity has been verified. You can now apply for loans!
            </p>
          </div>
        </div>
      </div>
    <% when "rejected" %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Verification Rejected</h3>
            <p class="text-sm text-red-700 mt-1">
              Your documents couldn't be verified. Please resubmit with clear, valid documents.
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <% if @kyc_submitted %>
      <div class="space-y-4">
        <h3 class="text-lg font-medium text-gray-900">Submitted Documents</h3>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div class="bg-gray-50 p-4 rounded-md">
            <h4 class="text-sm font-medium text-gray-900 mb-2">Government ID</h4>
            <p class="text-xs text-gray-600">
              <%= current_user.kyc_payload&.dig("gov_id_type")&.humanize %>
              <% if current_user.kyc_payload&.dig("gov_id_number_last4") %>
                - ****<%= current_user.kyc_payload["gov_id_number_last4"] %>
              <% end %>
            </p>
            <% if current_user.kyc_gov_id_image.attached? %>
              <p class="text-xs text-green-600 mt-1">✓ Image uploaded</p>
            <% end %>
          </div>

          <div class="bg-gray-50 p-4 rounded-md">
            <h4 class="text-sm font-medium text-gray-900 mb-2">Selfie Photo</h4>
            <% if current_user.kyc_selfie_image.attached? %>
              <p class="text-xs text-green-600">✓ Image uploaded</p>
            <% else %>
              <p class="text-xs text-red-600">✗ Image missing</p>
            <% end %>
          </div>
        </div>

        <% if current_user.kyc_payload&.dig("address_line1") %>
          <div class="bg-gray-50 p-4 rounded-md">
            <h4 class="text-sm font-medium text-gray-900 mb-2">Address</h4>
            <p class="text-xs text-gray-600"><%= current_user.kyc_payload["address_line1"] %></p>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="mt-8 flex justify-between items-center">
      <% if @kyc_status == "rejected" || !@kyc_submitted %>
        <%= link_to "Submit/Resubmit Documents", new_kyc_path, 
                    class: "px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
      <% end %>

      <% if Rails.env.development? && @kyc_status == "pending" %>
        <div class="space-x-2">
          <%= form_with url: simulate_decision_kyc_path, method: :post, local: true, class: "inline" do |form| %>
            <%= form.hidden_field :status, value: "approved" %>
            <%= form.submit "✓ Simulate Approval", 
                            class: "px-4 py-2 bg-green-600 text-white text-sm rounded-md hover:bg-green-700" %>
          <% end %>
          <%= form_with url: simulate_decision_kyc_path, method: :post, local: true, class: "inline" do |form| %>
            <%= form.hidden_field :status, value: "rejected" %>
            <%= form.submit "✗ Simulate Rejection", 
                            class: "px-4 py-2 bg-red-600 text-white text-sm rounded-md hover:bg-red-700" %>
          <% end %>
        </div>
      <% end %>

      <%= link_to "Back to Dashboard", root_path, 
                  class: "px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>
</div>
