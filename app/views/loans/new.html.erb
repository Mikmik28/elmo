<% content_for :title, "New Loan" %>

<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Apply for a Loan</h1>

  <%= form_with model: @loan, local: true, class: "space-y-6" do |form| %>
    <% if @loan.errors.any? %>
      <div class="bg-red-50 border border-red-300 rounded-md p-4">
        <h3 class="text-sm font-medium text-red-800">
          <%= pluralize(@loan.errors.count, "error") %> prohibited this loan from being saved:
        </h3>
        <ul class="mt-2 text-sm text-red-700 list-disc pl-5">
          <% @loan.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :amount_cents, "Loan Amount (in cents)", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :amount_cents, 
            placeholder: "e.g., 500000 for ₱5,000", 
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      <p class="mt-1 text-sm text-gray-500">Enter amount in cents (e.g., 500000 for ₱5,000)</p>
    </div>

    <div>
      <%= form.label :term_days, "Loan Term (days)", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :term_days, 
            placeholder: "e.g., 45 for micro, 150 for extended, 270/365 for longterm", 
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      <p class="mt-1 text-sm text-gray-500">
        Valid terms: 1-60 days (micro), 61-180 days (extended), 270 or 365 days (longterm)
      </p>
    </div>

    <div class="flex justify-end space-x-3">
      <%= link_to "Cancel", root_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50" %>
      <%= form.submit "Submit Application", class: "px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md hover:bg-indigo-700" %>
    </div>
  <% end %>
</div>