<% content_for :title, "Loan Details" %>

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-4 flex items-center justify-between">
    <h1 class="text-3xl font-bold text-gray-900">
      <% if current_user.admin_role? %>
        Loan Details (Admin View)
      <% else %>
        Loan Application Submitted
      <% end %>
    </h1>
    <% if current_user.admin_role? %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
        Admin Access
      </span>
    <% end %>
  </div>

  <% unless current_user.admin_role? %>
    <div class="bg-green-50 border border-green-300 rounded-md p-4 mb-6">
      <p class="text-green-800">Your loan application has been successfully submitted!</p>
    </div>
  <% end %>

  <% if current_user.admin_role? && @loan.user != current_user %>
    <div class="bg-blue-50 border border-blue-300 rounded-md p-4 mb-6">
      <h4 class="text-sm font-medium text-blue-800 mb-2">Borrower Information</h4>
      <p class="text-blue-700">
        <strong><%= @loan.user.full_name %></strong><br>
        <%= @loan.user.email %>
      </p>
    </div>
  <% end %>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Loan Details</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">Application details and computed values</p>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Loan ID</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @loan.id %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Amount</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            ₱<%= number_with_delimiter(@loan.amount_in_pesos, precision: 2) %>
            <span class="text-gray-500">(<%= number_with_delimiter(@loan.amount_cents) %> cents)</span>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Term</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @loan.term_days %> days</dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Product Type</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
              <%= case @loan.product
                  when 'micro' then 'bg-blue-100 text-blue-800'
                  when 'extended' then 'bg-yellow-100 text-yellow-800' 
                  when 'longterm' then 'bg-green-100 text-green-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>">
              <%= @loan.product.capitalize %>
            </span>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Due Date</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @loan.due_on.strftime("%B %d, %Y") %>
            <span class="text-gray-500">(<%= distance_of_time_in_words(Date.current, @loan.due_on) %> from now)</span>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
              <%= @loan.state.capitalize %>
            </span>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="mt-6 flex justify-center">
    <% if current_user.admin_role? && @loan.state_approved? %>
      <div class="w-full">
        <div class="bg-yellow-50 border border-yellow-300 rounded-md p-4 mb-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-yellow-800">Ready for Disbursement</h3>
              <p class="mt-1 text-sm text-yellow-700">This approved loan is ready to be disbursed to the borrower.</p>
            </div>
          </div>
        </div>
        
        <%= form_with url: force_disburse_admin_loan_path(@loan), method: :post, local: true, class: "mb-4" do |f| %>
          <div class="flex space-x-3">
            <%= f.submit "💰 Disburse Loan", 
                class: "flex-1 px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500",
                data: { 
                  confirm: "Are you sure you want to disburse ₱#{number_with_delimiter(@loan.amount_in_pesos, precision: 2)} to #{@loan.user.full_name}?",
                  disable_with: "Processing..."
                } %>
          </div>
        <% end %>
        
        <div class="text-center space-x-3">
          <%= link_to "← Back to All Loans", loans_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50" %>
          <%= link_to "Admin Panel", admin_root_path, class: "px-4 py-2 text-sm font-medium text-purple-700 bg-purple-100 border border-purple-300 rounded-md hover:bg-purple-200" %>
        </div>
      </div>
    <% elsif current_user.admin_role? %>
      <div class="w-full text-center">
        <div class="bg-gray-50 border border-gray-300 rounded-md p-4 mb-4">
          <p class="text-sm text-gray-600">
            Loan Status: <strong><%= @loan.state.capitalize %></strong> - 
            <% if @loan.state_pending? %>
              Awaiting approval before disbursement.
            <% elsif @loan.state_disbursed? %>
              Already disbursed.
            <% elsif @loan.state_paid? %>
              Loan has been fully paid.
            <% elsif @loan.state_rejected? %>
              Application was rejected.
            <% else %>
              Current status does not allow disbursement.
            <% end %>
          </p>
        </div>
        <div class="space-x-3">
          <%= link_to "← Back to All Loans", loans_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50" %>
          <%= link_to "Admin Panel", admin_root_path, class: "px-4 py-2 text-sm font-medium text-purple-700 bg-purple-100 border border-purple-300 rounded-md hover:bg-purple-200" %>
        </div>
      </div>
    <% else %>
      <%= link_to "Apply for Another Loan", new_loan_path, class: "px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md hover:bg-indigo-700 mr-3" %>
      <%= link_to "Back to Dashboard", root_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50" %>
    <% end %>
  </div>
</div>